            url: '/Login/EditData/',
            type: 'post',
            data: { 'id': id },
            dataType: 'JSON',
            success: function (data) {
                console.log("成功访问");
                console.log(data);
            },
            error: function (data) {
                console.log("访问失败");
                console.log(data);
            }
        });**/

    }
    function Modify(id) {
        window.location = "/Equipment/EditData/" + id;
    }

</script>


