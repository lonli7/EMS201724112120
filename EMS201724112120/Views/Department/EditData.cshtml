@model EMS201724112120.Models.Department
@{
    Layout = null;
}

<html>
<head>
    <title>修改</title>
    <link href="~/lib/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/jquery.min.js"></script>
    <script src="~/lib/bootstrap/bootstrap.min.js"></script>

</head>
<body>

    <!--用户界面导航-->
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/Employee/">员工管理</a>
                <a class="navbar-brand" href="/Equipment/">设备管理</a>
                <a class="navbar-brand" href="/Department/">部门管理</a>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#">欢迎你：@Session["name"]</a></li>
                    <li><a href="/Login/Logout">退出</a></li>
                </ul>
            </div>
        </div>
    </nav>

    @using (Html.BeginForm("EditDataed", "Department", FormMethod.Post))
    {
        <h2 style="text-align:center;">修改部门信息</h2>
        <div class="row" style="margin: 10px auto;width:60%;">
            <div class="col-md-12">
                <table class="table table-bordered table-hover table-striped">

                    <tr>
                        <td colspan="2">修改 @Html.HiddenFor(a => a.Id)</td>
                    </tr>
                    <tr>
                        <td>部门名称:</td>
                        @*注释*@
                        <td>@Html.TextBoxFor(a => a.name)</td>
                    </tr>
                    <tr>
                        <td>部门管理员:</td>
                        <td>@Html.TextBoxFor(a=> a.admin)</td>
                    </tr>
                   
                    <tr>
                        <td colspan="2"><input type="submit" value="确认修改" />@Html.ActionLink("返回", "Index", "Department")</td>
                    </tr>
                </table>
            </div>
        </div>
    }
</body>
</html>